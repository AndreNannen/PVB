@model IEnumerable<Delta_Impuls.Models.member>

@{
    ViewBag.Title = "Index";
    int year = DateTime.Today.Year - 18;
}

<h2>Leden overzicht</h2>

<h3>Aantal juniorleden: @Html.Encode(Model.Count(m => m.birthdate.Year >= year))</h3> 
<h3>Aantal seniorleden: @Html.Encode(Model.Count(m => m.birthdate.Year <= year))</h3> 
<br />
<p>
    @using (Html.BeginForm())
    {
    <p>
        Zoek op voor- en achternaam: @Html.TextBox("searching")
        <input type="submit" value="Zoeken" />
    </p>
    }
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.bondsnr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.para_tt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.insertion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zipcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phonenumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mobilenumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.e_mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.membersince)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.category_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lj.lj1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ls.ls1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.bondsnr)
        </td>
        <td>
            @{
                if (item.cg)
                {
                    @Html.Raw("Ja");

                }
                else
                {
                    @Html.Raw("Nee");
                }
            }
        </td>
        <td>
            <!-- If Gender is true show "Ja", Else "Nee" -->
            @{
                if (item.gender)
                {
                    @Html.Raw("Ja");

                }
                else
                {
                    @Html.Raw("Nee");
                }
            }
         </td>
        <td>
            @Html.DisplayFor(modelItem => item.birthdate)
        </td>
        <td>
            <!-- If Gender is true show "Man", Else "Vrouw" -->
            @{ 
                if (item.gender)
                {
                    @Html.Raw("Man");

                }
                else
                {
                    @Html.Raw("Vrouw");
                }
            }
         
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.insertion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zipcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phonenumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mobilenumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.e_mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.membersince)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.category_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lj.lj1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ls.ls1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
